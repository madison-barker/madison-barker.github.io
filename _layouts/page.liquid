---
layout: default
---


{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<h1 class="post-title">{{ page.page_title | default: page.title }}</h1>



<title>
  {% if page.layout == "page" %}
    {{ page.title }} - Madison S. Barker
  {% elsif page.layout == "about" %}
    Madison S. Barker | About
  {% else %}
    {{ site.title }} | {{ page.title }}
  {% endif %}
</title>


  <article>
    {{ content }}
  </article>

  {% if page.related_publications %}
    <h2>References</h2>
    <div class="publications">
      {% bibliography --cited_in_order %}
    </div>
  {% endif %}

  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
